@model BookList.Models.Book
@{
    ViewData["Title"] = "Details";
}

<h3>Detalhes</h3>
<hr/>


<div class="row form-border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Name">Nome</label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Autor"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Autor" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Editora">Nome</label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Editora" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-1">
                <label asp-for="Ano">Nome</label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Ano" disabled class="form-control" />
            </div>
        </div>
    </div>

    <br />
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-sm btn-success">Voltar</a>

    </div>
</div>

